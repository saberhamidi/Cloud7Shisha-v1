                                        <tr style="text-align: center;">
                                            <td valign="top" class="bodyContent" mc:edit="body_content00">
                                                <h2>Here is what your ordered</h2>
                                            </td>
                                        </tr>
                                        <tr style="background-color: #e6ffe6;">
                                            <td>
                                                <table class="itemsTable">
                                                  <tr>
                                                    <th class="firstColumn">Product</th>
                                                    <th>Unit Price</th>
                                                    <th>Total Price</th>
                                                  </tr>
                                                  <!-- Basket iteration logic-->
                                                  {{#each basket as |item index|}}
                                                      <tr>
                                                          <td style='width: 50%;'>
                                                                <h4> {{item.quantity}}x {{item.name}}</h4>
                                                                <div style='margin-left: 20px;'>
                                                                {{#if (eq item.category 'shisha')}}
                                                                    <label>Head: <span class='options'>{{item.head}}</span></label><br>
                                                                    <label>Hose: <span class='options'>{{item.hose}}</span></label><br>
                                                                    <label>Base: <span class='options'>{{item.base}}</span></label><br>
                                                                    <label>Flavours:
                                                                        <span class='options'>
                                                                            {{#each item.flavours}}
                                                                                 {{this}},
                                                                            {{/each}} 
                                                                        </span>
                                                                    </label>
                                                                {{else}}
                                                                    {{#if (eq item.category 'extra-head')}}
                                                                        <label>Head: <span class='options'>{{item.head}}</span></label><br>
                                                                        <label>Flavours:
                                                                            <span class='options'>
                                                                                {{#each item.flavours}}
                                                                                     {{this}},
                                                                                {{/each}} 
                                                                            </span>
                                                                        </label>
                                                                    {{/if}}
                                                                {{/if}}
                                                                </div>
                                                            </td> 
                                                            <td class='secondColumn'>£{{dc (div item.costs item.quantity)}}</td>
                                                            <td class='thirdColumn'>£{{dc item.costs}}</td>
                                                      </tr>
                                                  {{/each}}                                                  
                                                </table>
                                                <hr style="margin-right: 20px; margin-left: 20px;">
                                                <div class="clearfix full-width mb1">
                                                    <div class="left quarter-width px2">
                                                        <p class="small bottom-dotted border-color-light-gray relative mb1">
                                                            <span class="bg-white absolute t1">Subtotal</span> <span class="bg-white absolute t1 r0"> &nbsp; £{{dc bill.total}}</span>
                                                        </p>
                                                        {{#if (lt bill.discount 0)}}
                                                            <p class="small bottom-dotted border-color-light-gray relative mb1">
                                                                <span class="bg-white absolute t1">Discount (20%)</span> <span class="bg-white absolute t1 r0"> &nbsp; -£{{dc (dis bill.discount)}}</span>
                                                            </p>
                                                        {{/if}}
                                                    </div>  
                                                    <div style="font-weight: bold; float: right;">
                                                        <hr>
                                                        <p style="float: right;">Total Cost: £{{dc (ttl bill.total bill.discount)}}</p>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
